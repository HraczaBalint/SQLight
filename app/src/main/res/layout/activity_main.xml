<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olvasás"
        android:id="@+id/btn_olvas"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rögzítés"
        android:id="@+id/btn_rogzit"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Törlés"
        android:id="@+id/btn_torol"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Módósítás"
        android:id="@+id/btn_modosit"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:id="@+id/text_adatok"
        android:maxLines="999"
        android:scrollbars="vertical"/>

</LinearLayout>